<div class="pull-right">
  <%= link_to("新增志愿者活动",new_admin_job_path,:class => "btn btn-default") %>
  </div>
  <br><br>
<table class="table table-boldered table-striped custab" >
    <thead>
        <tr>
            <td>
                活动列表
            </td>

            <td>
              收到申请数量
            </td>
            <td>
                限制人数
            </td>
            <td>
                活动时间
            </td>
            <td>
                活动地点
            </td>

            <td>
                管理选项
            </td>
            <td>
                发布时间
            </td>
        </tr>
    </thead>

    <% @jobs.each do |job| %>
    <tr>

        <td>
            <%= render_job_status(job) %>

            <%= link_to(job.title, admin_job_path(job)) %>
        </td>
        <td> <%= link_to(job.resumes.count,admin_job_resumes_path(job)) %> </td>
        <td> <%= job.wage_upper_bound %> </td>
        <td> <%= job.activity_time %> </td>
        <td> <%= job.activity_address %> </td>
        <td>
            <%= link_to("编辑", edit_admin_job_path(job), :class => "btn btn-xs btn-info") %>
            |
            <%= link_to("删除", admin_job_path(job), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure?" }) %>

            |
            <% if job.is_hidden %>

            <%= link_to("显示", publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-success") %>
        <% else %>
            <%= link_to("隐藏", hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-warning") %>
            <% end %>
        </td>
        <td>
            <%= job.created_at %>
        </td>
    </tr>
    <% end %>
</table>
